{
  "name": "angular-base-project",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate:openApi": "ng-openapi-gen -c src/app/api/openApiSrc/ng-openapi-gen-config.json",
    "docker:build": "ng build --configuration production && docker build --no-cache -t atsm-web-ui .",
    "docker:run": "docker run -p 8080:80 --name ATSM-WE-UI atsm-web-ui",
    "docker:all": "npm run docker:build && npm run docker:run"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "^20.0.5",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@jest/globals": "^30.0.3",
    "@jsverse/transloco": "^7.6.1",
    "@ngxs/store": "^20.0.2",
    "loht-true-skeleton": "^3.0.10",
    "ng-openapi-gen": "^0.53.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.5",
    "@angular/cli": "^20.0.5",
    "@angular/compiler-cli": "^20.0.0",
    "@ngxs/devtools-plugin": "^20.0.2",
    "@ngxs/storage-plugin": "^20.0.2",
    "@types/jest": "^30.0.0",
    "esbuild": "^0.25.5",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.6.0",
    "ts-jest": "29.1.2",
    "typescript": "~5.8.2"
  }
}
